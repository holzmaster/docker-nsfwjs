{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useSimplifiedLogicExpression": "off"
			},
			"style": {
				"useSingleVarDeclarator": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}