{
	"$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useSimplifiedLogicExpression": "off"
			},
			"style": {
				"useSingleVarDeclarator": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
